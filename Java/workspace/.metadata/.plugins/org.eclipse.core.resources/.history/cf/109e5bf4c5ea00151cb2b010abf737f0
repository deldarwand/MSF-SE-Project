package pl.googlecardboard;

import java.io.IOException;

import pl.packet.Packet;

public final class GPSPacket extends Packet{

	private float latitude;
	private float longitude;
	
	public void write(String input) throws IOException{
		String[] l = input.split(Packet.SPLITTER);
		if(l.length == 2){
			latitude = Float.parseFloat(l[0]);
			longitude = Float.parseFloat(l[1]);
		}
	}
	
	public byte[] read(){
		return new String("G" + Packet.DELIMETER + latitude + Packet.SPLITTER + longitude + Packet.DELIMETER).getBytes();
	}
	
	public float getLatitude(){
		return latitude;
	}
	
	public float getLongitude(){
		return longitude;
	}
}
