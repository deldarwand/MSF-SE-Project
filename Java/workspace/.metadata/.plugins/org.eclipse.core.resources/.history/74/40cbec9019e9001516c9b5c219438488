package google.sql;

import google.gps.GPSCoordinate;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class SQL {

	private static SQLDatabase database;
	
	public static final void createDatabase(){
		try {
			database = new SQLDatabase();
		} catch (ClassNotFoundException exception) {
			exception.printStackTrace();
		}
	}
	
	public static final void createDatabase(String name){
		try {
			database = new SQLDatabase(name);
		} catch (ClassNotFoundException exception) {
			exception.printStackTrace();
		}
	}
	
	public static final void deleteDatabase(){
		database = null;
	}
	
	public static final void insert(int humidity, int temperature, GPSCoordinate coord){
		if(database != null){
			try {
				database.execute(	"INSERT INTO Database " + 
									"VALUES (" + getTimeStamp() + ", "+ humidity + ", " + temperature + ", " + 
												coord.latitude + ", " + coord.longitude + ")");
			} catch (SQLException exception) {
				exception.printStackTrace();
			}
		}
	}
	
	public static final String getTimeStamp(){
		return null;
	}
	
	
}
