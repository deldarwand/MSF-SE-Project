package google.bluetooth;

import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;

import javax.microedition.io.StreamConnection;

import pl.packet.Packet;

public class Session {

	private InputStream input;
	private OutputStream output;
	
	public Session(StreamConnection connection) throws IOException{
		this.input = connection.openInputStream();
		this.output = connection.openOutputStream();
	}
	
	public void write(Packet packet){
		
	}
	
	public Packet read(){
		
	}
	
	private String readString(InputStream input) throws IOException{
		String str = "";
		int value;
		while((value = input.read()) != NONE && value != Packet.DELIMETERDELIMETER){
			/*
			 * There could be a better way to do this,
			 * but currently, not in a way such that
			 * it can take in any length of bytes
			 */
			str += (char) value;
		}
		return str;
	}
	
	
	
}
